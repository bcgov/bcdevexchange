@{
    ViewData["Title"] = "HomePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="landing">
    <div class="container">
        <div class="alert alert-warning alert-digital-marketplace alert-dismissible fade show" role="alert">
            Looking for <strong>Code With Us</strong> and <strong>Sprint With Us</strong> opportunities? They've moved to the new <strong>Digital Marketplace</strong>.
            <a href="https://digital.gov.bc.ca/marketplace" target="_blank" class="btn btn-black">Visit site <i class="fa fa-external-link"></i></a>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>

    <!-- header-banner start -->
    <div class="hero home-hero">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-lg-8">
                    <div class="hero-text bg-overlay">We're a supportive community in British Columbia, Canada enabling the government to deliver better digital services.</div>
                </div>
            </div>
        </div>
    </div>
    <!-- header-banner end -->
    <!-- Exchange Lab teaser start / 'teaser-img-left' -->
    <div class="teaser-img-left bg-secondary">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="teaser-name"><i class="fa fa-users"></i> Exchange Lab</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md mr-md-5 mb-5 mb-md-0">
                    <a href="ExchangeLab">
                        <img class="img-fluid img-clickable" src="img/home_img/exchange-lab-teaser.jpg" alt="Exchange Lab">
                    </a>
                </div>
                <div class="col-md align-self-start">
                    <div class="teaser">
                        <title>Want to create capability in your organization to deliver digital services?</title>
                        <subtitle>We help B.C. government organizations assemble digital delivery teams. At the Exchange Lab, we host teams in residence where we support them in a positive, collaborative environment.</subtitle>
                        <stat>14+</stat>
                        <stat-description>Digital delivery teams have got their start here</stat-description>
                        <a class="btn btn-blue" href="ExchangeLab">Learn More <i class="fa fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Exchange Lab teaser end -->
    
    <!-- DevOps Platform teaser start / "teaser-img-right" -->
    <div class="teaser-img-right bg-dark">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="teaser-name"><i class="fa fa-server"></i> Platform</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md mr-md-5 mb-5 mb-md-0 align-self-start">
                    <div class="teaser">
                        <title>Still deploying apps the hard way?</title>
                        <subtitle>Our DevOps platform enables digital delivery teams in the B.C. government to develop and deploy their applications quickly, securely, and at scale.</subtitle>
                        <stat>100+</stat>
                        <stat-description>Apps running on the platform</stat-description>
                        <a href="DevOpsPlatform" class="btn btn-blue">Learn More
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md">
                    <a href="DevOpsPlatform">
                        <img class="img-fluid img-clickable" src="img/home_img/devops-platform-teaser.jpg" alt="DevOps Platform">
                    </a>
                </div>
            </div>
            </div>
        </div>
    </div>
    <!-- DevOps Platform teaser end -->
    
    <!-- Learning teaser start -->
    <div class="teaser-img-left bg-secondary">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="teaser-name"><i class="fa fa-graduation-cap"></i> Learning</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md mr-md-5 mb-5 mb-md-0">
                    <a href="/learning">
                        <img class="img-fluid img-clickable" src="img/home_img/learning-teaser.jpg" alt="image">
                    </a>
                </div>
                <div class="col-md align-self-center">
                    <div class="teaser">
                        <title>Want to 'be more agile,' but not sure how?</title>
                        <subtitle>We can help you understand and adopt new approaches to teamwork and technology like Agile, Scrum, and DevOps. You might even have some fun while you're at it!</subtitle>
                        <stat>1,400+</stat>
                        <stat-description>People from across the B.C. government have taken part in training and learning events we've hosted</stat-description>

                        <a href="/learning" class="btn btn-blue">Explore Courses
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Learning teaser end -->
    
    <!-- Community section start -->
    <div class="section_main bg-light text-dark" id="community">
        <div class="section_inner">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="teaser-name"><i class="fa fa-comments-o"></i> Community</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 offset-md-1 mr-md-4 mb-5 mb-md-0">
                        <h2 class="mb-4">Newsletter</h2>
                        <p class="mb-4">Stay up-to-date on events, learning opportunities, and what's happening at the Exchange Lab.</p>
                        <a class="btn btn-blue" href="https://us3.list-manage.com/subscribe?u=2cd8863adab4f39ade7cbee34&id=b331c22b50" target="_blank">Subscribe <i class="fa fa-envelope"></i></a>
                    </div>
                    <div class="col-md-4 offset-md-1">
                        <img src="img/Icons/Rocket.Chat_Logo.svg" class="rocket-chat mb-4">
                        <p class="mb-4">Join 1,000+ members on our community messaging platform. Connect, get help, and offer your knowledge.</p>
                        <div class="small_text text-muted">Already have an IDIR or a GitHub account associated to the bcgov org?</div>
                        <a href="https://chat.pathfinder.gov.bc.ca/home" class="btn btn-blue" target="_blank">Join RocketChat <i class="fa fa-external-link"></i></a>
                        <div class="small_text text-muted mt-5">Don't have an IDIR or bcgov-associated GitHub account? <span class="text-nowrap"><a href="mailto:BCDevExchange@gov.bc.ca">Request an invitation <i class="fa fa-envelope"></i></a></span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Community section end -->
    
    <!-- Podcast Teaser section start -->
    <div class="section_main bg-secondary" id="podcasts">
        <div class="container">
