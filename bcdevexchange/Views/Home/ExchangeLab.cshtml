<!-- Benefits section start -->
<div class="section_main bg-white text-body">
    <div class="container">
        <div class="row pb-5">
            <div class="col-md-9 m-auto text-center">
                <h3>While in residence at the Exchange Lab, your team will benefit from:</h3>
            </div>
        </div>

        @await Component.InvokeAsync("TextWithSideImage", new { 
            TextOnLeft=true,
            Title="A Place to Call Home",
            SubTitle="Insulated from the status quo operations of your home organization, your team will have a dedicated room where they can focus and sprint towards their goal.",
            ImageFilePath="exchange-lab/place.jpg"
        })
        @await Component.InvokeAsync("TextWithSideImage", new { 
            TextOnLeft=true,
            Title="Training & Coaching",
            SubTitle="We will facilitate formal training for your team, help them make connections with other community members, and help bring your organization along for the journey.",
            ImageFilePath="exchange-lab/coaching.jpg"
        }) 
        @await Component.InvokeAsync("TextWithSideImage", new { 
            TextOnLeft=true,
            Title="Experts on Tap",
            SubTitle="Your team will have access to experts who can offer guidance in Service Design, Privacy and Security, Behavioural Insights, Integrated Data, and Social Media.",
            ImageFilePath="exchange-lab/experts.jpg"

        })
        @await Component.InvokeAsync("TextWithSideImage", new { 
            TextOnLeft=true,
            Title="Platform Services",
            SubTitle="Your team will get access to and support to use a suite of DevOps tools, including a hybrid-cloud container platform, so they can fully control the development and deployment of their product.",
            ImageFilePath="exchange-lab/platform-services.jpg"
        })        
        @await Component.InvokeAsync("TextWithSideImage", new { 
            TextOnLeft=true,
            Title="Community",
            SubTitle="Surrounded by other teams who are striving to improve their practices and products, your team will be encouraged and supported as they learn.",
            ImageFilePath="exchange-lab/community.jpg"
        })        
    </div>
</div>
<!-- Benefits section end -->

<div class="section_main dark_bg">
    <div class="container">
        <div class="row d-flex flex-md-row-reverse">
            <div class="col-md-6">
                <img src="img/exchange-lab/window.jpg">
            </div>
            <div class="col-md-6 p-5 align-self-center">
                <h2 class="mb-5">How do we get into the Lab?</h2>
                <p class="lead">If you’re interested in sponsoring a team for a year-long residency at the Lab, please email us at <a href="mailto:ExchangeLab@gov.bc.ca">ExchangeLab@gov.bc.ca</a></p>
            </div>
        </div>
    </div>
</div>

<!-- Lab tour teaser start -->
<div class="bg-light text-body">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col lab-tour-teaser"></div>
            <div class="m-auto col-md-6 col-lg-4 m-auto p-5 align-self-center">
                    <div class="py-1">
                        <i class="fa fa-map-marker"></i> <small>3rd Floor, 1012 Douglas Street, Victoria, BC</small>
                    </div>
                    <h2>Tour the Lab</h2>
                    <p class="lead">We host tours every month. Join us!</a></p>
                    <a class="blue_btn" href="https://www.eventbrite.ca/e/take-a-walk-on-the-agile-side-tour-of-bc-govs-exchange-lab-tickets-43946375793" target="_blank">Pick a date <i class="fa fa-external-link"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Lab tour teaser end -->

