@model bcdevexchange.Components.TextWithSideImage.TextWithSideImageModel

@{string titleHTML = Model.Title!=""?"<h2 class='exchange-lab'>"+Model.Title+"</h2>": "" ;}
@{string buttonHtml = Model.ButtonUrl!=""?"<h2 class='exchange-lab'>"+Model.ButtonUrl+"</h2>": "" ;}
@{if (Model.TextOnLeft)
{
    <div class='left-picture'>
        <div class='section_inner'>
            <div class='left-picture-container'>
                <div class='row'>
                    <div class='col-xl-6 col-md-6'>
                        <div class='outer'>
                            <div class='middle'>
                                @Html.Raw(titleHTML)
                                <h3 class='exchange-lab'>@Model.SubTitle</h3>
                            </div>
                            @Html.Raw(buttonHtml)
                        </div>
                    </div>
                    <div class='col-xl-6 col-md-6'>
                        <img class='sec_image' src=@("/img/"+Model.ImageFilePath) alt='image'>
                    </div>
                </div>
            </div>
        </div>
    </div>
} else {
    <div class='right-picture'>
    <div class='section_inner'>
        <div class='right-picture-container'>
            <div class='row'>
                <div class='col-xl-6 col-md-6'>
                    <img class='sec_image' src=@("/img/"+Model.ImageFilePath) alt='image'>
                </div>
                <div class='col-xl-6 col-md-6'>
                    <div class='outer'>
                        <div class='middle'>
                            <div class='inner inner3'>
                                @Html.Raw(titleHTML)
                                <h3 class='exchange-lab'>@Model.SubTitle</h3>
                            </div>
                            @Html.Raw(buttonHtml)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
}
